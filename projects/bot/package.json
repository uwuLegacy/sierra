{
    "name": "@sierra/bot",
    "version": "0.1.0",
    "description": ":robot:",
    "main": "dist/main.js",
    "author": "Legacy",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "prisma:gen": "prisma generate",
        "prisma:migrate dev": "prisma migrate dev",
        "prisma:migrate deploy": "prisma migrate deploy",
        "prisma:studio": "prisma studio"
    },
    "dependencies": {
        "@nestjs/common": "^8.0.0",
        "@nestjs/config": "^1.0.2",
        "@nestjs/core": "^8.0.0",
        "@nestjs/platform-express": "^8.0.0",
        "@ogma/common": "^1.0.0",
        "@ogma/logger": "^2.2.0",
        "@ogma/nestjs-module": "^3.1.0",
        "@prisma/client": "^3.2.1",
        "@sapphire/decorators": "^3.0.0",
        "@sapphire/discord.js-utilities": "^3.0.1",
        "@sapphire/framework": "^2.0.0-next.5e915d08.0",
        "@sapphire/pieces": "^3.0.1",
        "@sapphire/utilities": "^3.0.1",
        "discord.js": "^13.1.0",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.2.0"
    },
    "devDependencies": {
        "@golevelup/nestjs-modules": "^0.4.3",
        "@nestjs/cli": "^8.0.0",
        "@nestjs/schematics": "^8.0.0",
        "@nestjs/testing": "^8.0.0",
        "@nice-labs/git-rev": "^3.5.0",
        "@types/express": "^4.17.13",
        "@types/git-rev-sync": "^2.0.0",
        "@types/jest": "^27.0.1",
        "@types/node": "^16.10.2",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^4.28.2",
        "@typescript-eslint/parser": "^4.28.2",
        "eslint": "^7.30.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "jest": "^27.0.6",
        "prettier": "^2.3.2",
        "prisma": "^3.2.1",
        "supertest": "^6.1.3",
        "ts-jest": "^27.0.3",
        "ts-loader": "^9.2.3",
        "ts-node": "^10.2.1",
        "tsconfig-paths": "^3.10.1",
        "typescript": "^4.3.5"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "prisma": {
        "schema": "./src/services/prisma/schema.prisma"
    }
}
